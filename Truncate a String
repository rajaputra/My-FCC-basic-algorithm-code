function truncateString(str, num) {
  // Clear out that junk in your trunk
  if (num > 3) {
    var truncLength = 0;
    if (num < str.length) {
    //truncLength = str.length-3;
    str = str.slice(0, num-3)+"...";
    } return str;
  }
    else {
    str = str.slice(0, num)+"...";  
  
    }
  
  return str;

}

truncateString("A-tisket a-tasket A green and yellow basket", 11);
